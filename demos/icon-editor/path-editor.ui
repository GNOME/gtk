<interface>
  <template class="PathEditor" parent="GtkWidget">
    <child>
      <object class="GtkStack" id="path_cmds_stack">
        <child>
          <object class="GtkStackPage">
            <property name="name">label</property>
            <property name="child">
              <object class="GtkBox">
                <property name="hexpand">0</property>
                <child>
                  <object class="GtkLabel" id="path_cmds_label">
                    <property name="ellipsize">end</property>
                    <child>
                      <object class="GtkGestureClick">
                        <signal name="pressed" handler="path_cmds_clicked" swapped="yes"/>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <style>
                      <class name="circular"/>
                      <class name="small"/>
                    </style>
                    <property name="hexpand">1</property>
                    <property name="halign">end</property>
                    <property name="focus-on-click">0</property>
                    <property name="has-frame">0</property>
                    <property name="tooltip-text" translatable="yes">Edit path geometry</property>
                    <property name="child">
                      <object class="GtkImage">
                        <property name="paintable">
                          <object class="GtkIconPaintable">
                            <property name="file">resource:///org/gtk/Shaper/document-edit-symbolic.svg</property>
                          </object>
                        </property>
                      </object>
                    </property>
                    <signal name="clicked" handler="edit_path" swapped="yes"/>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">entry</property>
            <property name="child">
              <object class="GtkEntry" id="path_cmds_entry">
                <signal name="activate" handler="path_cmds_activated" swapped="yes"/>
                <child>
                  <object class="GtkEventControllerKey">
                    <signal name="key-pressed" handler="path_cmds_key" swapped="yes"/>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
